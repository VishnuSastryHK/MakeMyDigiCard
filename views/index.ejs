<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/string-strip-html/dist/string-strip-html.umd.js"></script>

    <title>A card</title>

</head>

<body>
    <div class="container">
        <div class="m-4 text-center">
            <img src="/images/logo.svg" alt="">
            <p class="text-white">Lifestyle | Fashion | Travel</p>

        </div>
        <div class="row mb-3">
            <a href="/newCard" class="btn btn-success d-flex align-items-center"><i class="material-icons mr-2">add_circle</i>
                New Card</a>
        </div>

        <div class="row">

            <% cards.forEach(card=>{ %>
            <div class="col-lg-6 card mt-2 mr-0">
                <div class="row p-2">
                    <div class="col-5 overflow-hidden">
                        <img src="/images/mosque.jpg" class="card-img" alt="...">
                    </div>
                    <div class="col-7">
                        <div class="d-flex align-items-start">
                            <h5 class="w-100"><b> <%= card.title %> </b></h5>
                            <div class="more position-relative" style="cursor: pointer;">
                                <i class="material-icons p-2">more_vert</i>
                                <div class="d-none options card rounded-pill shadow-sm p-1 position-absolute">
                                    <a href="#" class="rounded-circle p-2 mb-2" style="background:blue;">
                                        <i class="material-icons" style="color:white">create</i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <span class="align-self-stretch "><%= card.snippet %>
                        </span>
                        <div class="d-flex align-items-end">
                            <div class="mr-2">
                                <img src="/images/mosque.jpg" class="rounded-circle" style="width: 40px; height: 40px;">
                            </div>
                            <div class=" flex-grow-1">
                                <h5 class="" style="font-size: 14px; line-height: 0.5rem;">
                                    <span><b><%= card.author%></b></span></h5>
                                <p style="font-size: 8px; line-height: 0.2rem;">
                                    <%= card.createdAt.toLocaleDateString() %></p>
                            </div>
                            <a href="#" class=" align-self-end">
                                <i class='material-icons ml-3 text-black'>send</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>




        </div>
        <script src="/js/index.js"></script>

</body>

</html>