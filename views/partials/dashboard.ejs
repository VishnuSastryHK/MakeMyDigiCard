<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Sidebar Dashboard Template</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
  </head>
  <body>

    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
      <div class="left_area">
        <h3>MAKE MY <span>DIGICARD</span></h3>
      </div>
      <div class="left_area">
        <h3></h3>
      </div>
      <div class="right_area">
        <a href="#" class="logout_btn">Logout</a>
      </div>
      <div class="right_area">
        <a target="blank" href="/preview/<%= card.id %>" class="preview_btn">Preview my Card</a>
      </div>
    </header>
    <!--header area end-->
    
    <!--sidebar start-->
    <div class="sidebar">
      <div class="profile_info">
        <img src="1.png" class="profile_image" alt="">
        <h4><%=card.id%></h4>
      </div>
      <a href="/editBasic"><i class="fas fa-desktop"></i><span class="dashboardKey">Basic</span></a>
      <a href="/editAbout"><i class="fas fa-cogs"></i><span class="dashboardKey">About</span></a>
      <a href="/editProducts"><i class="fas fa-table"></i><span class="dashboardKey">Products/Services</span></a>
      <a href="/editGallery"><i class="fas fa-th"></i><span class="dashboardKey">Gallery</span></a>
      <a href="/editPayment"><i class="fas fa-info-circle"></i><span class="dashboardKey">Payment</span></a>
      <br><br>
      <a href="/"><i class="fas fa-arrow-left"></i><span>Back to Main</span></a>
    </div>
    <!--sidebar end-->

    

    

  </body>
  
<script>
  var variable=sessionStorage.getItem('keyInDashboard');
  // Add active class to the current button (highlight it)
  var header = document.getElementsByClassName("sidebar");
  var btns = header.getElementsByClassName("btn");
  for (var i = 0; i < btns.length; i++) {
    btns[i].addEventListener("click", function() {
    var current = document.getElementsByClassName("active");
    if (current.length > 0) { 
      current[0].className = current[0].className.replace(" active", "");
    }
    this.className += " active";
    });
  }
  </script>
</html>
      